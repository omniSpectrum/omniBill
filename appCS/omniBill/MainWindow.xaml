<controls:MetroWindow x:Class="omniBill.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
  Icon="/Resources/dollarBill.ico"
  Height="350" Width="525" MinHeight="350" MinWidth="525"
  Title="omniBill MOFO!" >
    <controls:MetroWindow.WindowCommands>
        <controls:WindowCommands>
            <Button>
                <StackPanel Orientation="Horizontal">
                    <Image RenderOptions.BitmapScalingMode="Fant" Source="/Resources/settings.png"/>
                    <TextBlock Margin="4 0 0 0"
                   VerticalAlignment="Center"
                   Text="Settings" />
                </StackPanel>
            </Button>
        </controls:WindowCommands>
    </controls:MetroWindow.WindowCommands>
	<Grid x:Name="MainGrid" >
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="137*"/>
			<ColumnDefinition Width="380*"/>
		</Grid.ColumnDefinitions>
		<Grid x:Name="MenuGrid" Grid.Column="0" />
		<Grid Grid.Column="1" x:Name="ContentGrid">
			<Grid.RowDefinitions>
				<RowDefinition Height="57*"/>
				<RowDefinition Height="232*"/>
				<RowDefinition Height="30*"/>
			</Grid.RowDefinitions>
			<TextBlock HorizontalAlignment="Left" Margin="0,10,0,0" TextWrapping="Wrap" Text="About" FontSize="33.333" FontWeight="Bold" />
			<TextBlock Margin="0,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="omniBill is a simple standalone and modular 
			invoicing application developed by a group of competent students from haaga-helia"/>
			<ResizeGrip HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Bottom
			"/>
		</Grid>
	</Grid>
</controls:MetroWindow>

