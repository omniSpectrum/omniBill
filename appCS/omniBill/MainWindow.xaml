<Window x:Class="omniBill.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="omniBill" Height="350" Width="555" MinHeight="350" MinWidth="555" WindowStartupLocation="CenterScreen" Icon="50_cash_money_dollars_dollar_bill.ico" FontSize="16" FontFamily="Calibri">




    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>


        
        
        <Grid Grid.Column="0" Grid.Row="0" x:Name="menuGrid">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" SpreadMethod="Reflect">
                    <GradientStop Color="#015D5D5D" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Foreground="Green" Text="Logo" Height="20" VerticalAlignment="Top" />
            <TextBlock Grid.Row="1" Foreground="Blue" Text="Nav1" Height="20" VerticalAlignment="Top" />
            <TextBlock Grid.Row="2" Foreground="Blue" Text="Nav2" Height="20" VerticalAlignment="Top" />
            <TextBlock Grid.Row="3" Foreground="Blue" Text="Nav3" Height="20" VerticalAlignment="Top" />


        </Grid>
        <Grid Grid.Column="1" Grid.Row="0" x:Name="contentGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Foreground="Red" VerticalAlignment="Top" ><Run Text="Content"/><Run Language="fi-fi" Text=" Context based menu"/></TextBlock>
            <TextBlock Grid.Row="1" Foreground="Red" VerticalAlignment="Top" ><Run Text="Content"/><Run Language="fi-fi" Text=" abcdefghijklmnopqrstuxyzåäö"/></TextBlock>

        </Grid>
        
    </Grid>


</Window>
